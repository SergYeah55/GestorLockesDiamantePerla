<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondolargo"
    tools:context=".PartidaActivity">

    <ImageButton
        android:id="@+id/infoButonPartida"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/infobuton"
        app:layout_constraintStart_toEndOf="@+id/salirButonPartida"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/salirButonPartida"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/salidabuton"
        app:layout_constraintBottom_toTopOf="@+id/imagenUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/botonPokemonesPropios"
        android:layout_width="71dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/accesocapturados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toEndOf="@+id/logoRutasTotal"
        app:layout_constraintTop_toBottomOf="@+id/botonPokedex" />

    <ImageButton
        android:id="@+id/botonPokedex"
        android:layout_width="71dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/accesopokedex"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toEndOf="@+id/logoRutasTotal"
        app:layout_constraintTop_toBottomOf="@+id/separadoraPartida" />

    <TextView
        android:id="@+id/pokemonEncontradoEnun"
        android:layout_width="185dp"
        android:layout_height="36dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Pokemon encontrado"
        android:textColor="#ff3636"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerRutas" />

    <ImageView
        android:id="@+id/edicionPartidaLogo"
        android:layout_width="50dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreUsuarioPartida"
        app:layout_constraintEnd_toStartOf="@+id/musicPartida"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPartida"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/separadoraPartida"
        android:layout_width="334dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#ff3636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePartidaP"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/imagenUsuarioPartida"
        android:layout_width="180dp"
        android:layout_height="135dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/nombreUsuarioPartida"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textColor="#ff3636"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPartida"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombrePartidaP"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPartida"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioPartida" />

    <ImageButton
        android:id="@+id/musicPartida"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/volverAjustesButon"
        android:layout_width="122dp"
        android:layout_height="74dp"
        android:layout_marginBottom="124dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/volverboton"
        android:text="Volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerRutas"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/botongenerico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRutasTotal" />

    <ImageView
        android:id="@+id/logoRutasTotal"
        android:layout_width="206dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/gestionlogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separadoraPartida" />

    <Spinner
        android:id="@+id/spinnerPokemon"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/botongenerico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pokemonEncontradoEnun" />

    <CheckBox
        android:id="@+id/capturado"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Capturado"
        android:textColor="#ff3636"
        app:layout_constraintStart_toEndOf="@+id/spinnerPokemon"
        app:layout_constraintTop_toBottomOf="@+id/pokemonEncontradoEnun" />

    <CheckBox
        android:id="@+id/Inhabilitado"
        android:layout_width="131dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Inhabilitado"
        android:textColor="#ff3636"
        app:layout_constraintStart_toEndOf="@+id/spinnerPokemon"
        app:layout_constraintTop_toBottomOf="@+id/capturado" />

    <Button
        android:id="@+id/agregarBoton"
        android:layout_width="119dp"
        android:layout_height="83dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/agregarboton"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toEndOf="@+id/volverAjustesButon"
        app:layout_constraintTop_toBottomOf="@+id/spinnerPokemon" />

</androidx.constraintlayout.widget.ConstraintLayout>