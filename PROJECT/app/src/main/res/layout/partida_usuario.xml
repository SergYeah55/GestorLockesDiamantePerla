<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="98dp"
        android:background="@drawable/botongenerico"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagenVersionPartida"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="14dp"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/nombreRutaTarjeta"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Nombre partida"
            android:textColor="#ff3636"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/porcentajeCaptura"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-124dp"
            android:layout_marginTop="56dp"
            android:fontFamily="sans-serif-black"
            android:text="Porcentaje "
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/botonEntrarPartida"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginLeft="-40dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:foreground="@drawable/flechadentro" />

    </LinearLayout>
</androidx.cardview.widget.CardView>