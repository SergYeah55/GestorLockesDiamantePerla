<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondolargo"
    tools:context=".PokedexActivity">

    <ImageButton
        android:id="@+id/infoButonPokedex"
        android:layout_width="44dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/infobuton"
        app:layout_constraintStart_toEndOf="@+id/salirButonPokedex"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/salirButonPokedex"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/salidabuton"
        app:layout_constraintBottom_toTopOf="@+id/imagenUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/edicionPokedex"
        android:layout_width="50dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/nombreUsuarioPokedex"
        app:layout_constraintEnd_toStartOf="@+id/musicaPokedex"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPokedex" />

    <TextView
        android:id="@+id/nombrePartidaPokedex"
        android:layout_width="248dp"
        android:layout_height="37dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed-light"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPokedex"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioPokedex" />

    <View
        android:id="@+id/separadoraPokedex"
        android:layout_width="334dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:background="#ff3636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombrePartidaPokedex"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/musicaPokedex"
        android:layout_width="84dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagenUsuarioPokedex"
        android:layout_width="180dp"
        android:layout_height="135dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="72dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <TextView
        android:id="@+id/nombreUsuarioPokedex"
        android:layout_width="252dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textColor="#ff3636"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenUsuarioPokedex"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoPokedex"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:foreground="@drawable/pokedex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separadoraPokedex" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPokedex"
        android:layout_width="296dp"
        android:layout_height="178dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPokedex" />

    <Button
        android:id="@+id/volverDePokedex"
        android:layout_width="182dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/volverboton"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerPokedex" />
</androidx.constraintlayout.widget.ConstraintLayout>